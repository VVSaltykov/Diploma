@using Microsoft.AspNetCore.Components.Authorization


<RadzenPanelMenu DisplayStyle="@(sidebarExpanded ? MenuItemDisplayStyle.IconAndText : MenuItemDisplayStyle.Icon)" ShowArrow="false">
    <RadzenPanelMenuItem Text="Сообщения" Icon="event" IconColor="@Colors.Secondary" Path="/"/>
    <AuthorizeView Policy="IsProfessor">
        <RadzenPanelMenuItem Text="Личные сообщения" Icon="event" IconColor="@Colors.Secondary" Path="/PrivateMessages"/>
    </AuthorizeView>
    <RadzenPanelMenuItem Text="Пользователи Telegram" Icon="accessibility" IconColor="@Colors.Secondary" Path="/TelegramUsers"/>
    <AuthorizeView Policy="IsAdmin">
        <RadzenPanelMenuItem Text="Пользователи Web" Icon="accessibility" IconColor="@Colors.Secondary" Path="/WebUsers"/>
    </AuthorizeView>
</RadzenPanelMenu>

@code{

    bool sidebarExpanded = true;

}